<% # Contact Us Page View Template %>

<h3>Contact Us</h3>
<br/>
<div class="mb-3">
  <form action="<%= send_email_url %>" method="POST">
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <div class="mb-3">
          <input type="text" name="name" class="form-control" placeholder="Name" required>
      </div>
      <div class="mb-3">
        <input type="email" name="email" class="form-control" placeholder="Email" required>
      </div>
      <div class="mb-3">
          <input type="text" name="subject" class="form-control" placeholder="Subject" required>
      </div>
      <div class="mb-3">
          <textarea name="message" class="form-control" cols="30" rows="10" placeholder="Write something..."></textarea>
      </div>
      <br/>
      <div class="mb-3">
        <input type="submit" class="btn btn-secondary" value="Send Message">
          </div>
        </form>
      </div>
      <div class="mb-3">
      </div>
    </div>
  </div>
</div>






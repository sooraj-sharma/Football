
<div class="card" style="width: 30rem;">
  <div class="card-body">
    <h5 class="card-title"><%= @match.home_team %>  <strong>V/S</strong>  <%= @match.away_team %>
    </h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @match.match_date %></h6>
    <p class="card-text">Game On! Look forward to a thrilling match</p>
    <%= link_to 'Edit', edit_match_path(@match), class:"btn btn-secondary" %> 
    <%= link_to 'Back', matches_path, class:"btn btn-dark" %>
  </div>
</div>






